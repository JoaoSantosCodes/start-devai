# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package files
[package.json]
indent_style = space
indent_size = 2

# Config files
[.editorconfig]
indent_style = space
indent_size = 4

[.gitattributes]
indent_style = space
indent_size = 4

[.gitignore]
indent_style = space
indent_size = 4

[.eslintrc.json]
indent_style = space
indent_size = 2

[.prettierrc]
indent_style = space
indent_size = 2

[tsconfig.json]
indent_style = space
indent_size = 2

[requirements.txt]
indent_style = space
indent_size = 4

[setup.cfg]
indent_style = space
indent_size = 4

[pytest.ini]
indent_style = space
indent_size = 4

[.coveragerc]
indent_style = space
indent_size = 4 