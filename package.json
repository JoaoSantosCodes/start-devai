{
    "name": "devai-assistant",
    "displayName": "DevAI Assistant",
    "description": "VS Code extension integrating AI assistants for development",
    "version": "1.0.0",
    "icon": "media/icons/devai.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "devai-assistant.start",
                "title": "DevAI: Start Assistant"
            },
            {
                "command": "devai-assistant.stop",
                "title": "DevAI: Stop Assistant"
            },
            {
                "command": "devai-assistant.configure",
                "title": "DevAI: Configure Assistant"
            },
            {
                "command": "devai-assistant.togglePanel",
                "title": "DevAI: Toggle Assistant Panel"
            }
        ],
        "configuration": {
            "title": "DevAI Assistant",
            "properties": {
                "devai-assistant.autoStart": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start the assistant when VS Code starts"
                },
                "devai-assistant.model": {
                    "type": "string",
                    "default": "llama2",
                    "enum": [
                        "llama2",
                        "codellama",
                        "mistral"
                    ],
                    "description": "The AI model to use"
                },
                "devai-assistant.maxTokens": {
                    "type": "number",
                    "default": 2000,
                    "description": "Maximum number of tokens to generate"
                },
                "devai-assistant.temperature": {
                    "type": "number",
                    "default": 0.7,
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Temperature for text generation (0-1)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.3.3",
        "@vscode/test-electron": "^2.3.8"
    }
}
